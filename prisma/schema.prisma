generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  slug        String    @unique
  title       String    @unique
  description String
  images      String[]
  address1    String
  address2    String
  by          String
  launchDate  DateTime
  priceStart  Int
  priceEnd    Int
  emiStart    Int
  content     String
  contacts    Contact[]
}

model Contact {
  id             String  @id @map("_id") @db.ObjectId
  phoneNumber    String  @unique
  whatsappNumber String  @unique
  email          String? @unique
  name           String
  projectId      String  @db.ObjectId
  project        Project @relation(fields: [projectId], references: [id])
}
